\begin{BusinessRule}{RN-N13}{Tareas incluidas en cada ejercicio fiscal}
	{Derivación}
	{Controla la operación}
	\BRitem{Versión}{1.0}
	\BRitem{Autor}{Ulises Vélez Saldaña}
	\BRitem{Estatus}{Aprobada 27 de agosto de 2013}% P2
	\BRitem{Descripción}{Las tareas que corresponden a un año fiscal son aquellas en las que, por sus fechas de inicio y término programadas y reales, están o siguen activas en dicho año fiscal}
	\BRitem{Expresión formal}{Considerando a el año fiscal con fechas $A=(F_{inicial}, F_{termino})$ y la Tarea con fechas $T=(FP_{inicial}, FP_{termino}, FR_{inicial}, FR_{termino})$ donde $FP$ es fecha de programación y $FR$ fecha real. Entonces $T$ está en el año fiscal $A$ si:	
		\begin{Citemize}
 			\item $FP_{inicial}\lor FR_{inicial}<F_{termino}$.
			\item $FP_{termino}\lor FR_{termino}>F_{inicial}$.
		\end{Citemize}
	 La tarea también se considera dentro del año fiscal en caso de que $FR_{termino}$ no esté definida (el proyecto siga abierto) y la fecha actual corresponde al año fiscal en cuestión}
	\BRitem{Referenciado por}{\cdtIdRef{CUT 9}{Gestionar tareas de la Unidad Administrativa}, \cdtIdRef{RN-N12}{Periodos fiscales de trabajo por Unidad Administrativa} y \cdtIdRef{CUS 1}{Gestionar tareas de la UIPPyE}}
	
\end{BusinessRule}

