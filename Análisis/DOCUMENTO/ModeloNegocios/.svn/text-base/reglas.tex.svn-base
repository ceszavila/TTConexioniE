\begin{BusinessRule}{RN-N87}{Cálculo del avance total mensual de una actividad por localidad}
	{Restricción}
	{Controla la operación}
	\BRitem{Versión}{1.0}
	\BRitem{Autor}{Angelina Reyes Medina}
	\BRitem{Estatus}{Aprobada 06 de noviembre de 2013}
	\BRitem{Descripción}{Se obtiene el avance total de una actividad en un periodo de tiempo específico (P.ej.: Semanal, quincenal, mensual, trimestral, semestral, anual) y en la localidad especificada, por medio de la regla de negocios \cdtIdRef{RN-N64}{Cálculo del avance total de una actividad}, considerando lo siguiente:
	\begin{Citemize}
		\item El avance total mensual de una actividad será igual a la suma de los avances de cuatro semanas si la ``frecuencia de actualización'' de la actividad es ``semanal''; o será igual a la suma de los avances de 30, 31 o 28 días (dependiendo del mes en cuestión) si la ``frecuencia de actualización'' de la actividad es ``diario''.
		\item El avance total mensual de una actividad será igual cero (0) si la ``frecuencia de actualización'' de la actividad es mayor al mes (P. ej.: Trimestral, semestral, anual, etc).
	\end{Citemize}
	}
	\BRitem{Referenciado por}{\cdtIdRef{RN-N86}{Cálculo del avance total mensual de una actividad por municipio}, \cdtIdRef{RP2}{Informe de Gobierno. Obras en proceso. Información Física}, \cdtIdRef{RP 6}{Acciones de alto impacto en proceso. Información física}, \cdtIdRef{RP 8}{Obras de alto impacto en proceso. Información física}}
\end{BusinessRule}

