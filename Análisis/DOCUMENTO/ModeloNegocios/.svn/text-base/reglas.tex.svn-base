\begin{BusinessRule}{RN-N31}{Determinación del tipo de financiamiento}
	{Derivación}
	{Controla la operación}
	\BRitem{Versión}{1.0}
	\BRitem{Autor}{Ulises Vélez Saldaña}
	\BRitem{Estatus}{Aprobada 6 de septiembre de 2013}
	\BRitem{Descripción}{La denominación del ``Tipo de financiamiento'' de una tarea corresponde al ``origen de su financiamiento'' cuando es financiada con un sólo ``origen''. Se 
	dice que es ``Mixto'' cuando la tarea es financiada con más de un ``origen de financiamiento'' diferente. Si no existen financiamientos registrados el ``tipo de financiamiento'' 
	será igual a ``Sin especificar''}
	\BRitem{Ejemplo}{\hspace{10pt}
		\begin{itemize}
			\item Tipo de financiamiento: Federal
			\begin{itemize}
				\item Federal \hspace{20pt} Ramo 16
				\item Federal \hspace{20pt} Ramo 33
			\end{itemize}
			\item Tipo de financiamiento: Mixto
			\begin{itemize}
				\item Federal \hspace{20pt} Ramo 16
				\item Municipal \hspace{20pt} Participación municipal
			\end{itemize}
		\end{itemize}
	}
	\BRitem{Referenciado por}{\cdtIdRef{CUT 6}{Gestionar financiamiento de una tarea}, \cdtIdRef{CUT 8.2}{Registrar avance del financiamiento}, \cdtIdRef{CUS 4.3}{Consultar financiamientos}}
\end{BusinessRule}
