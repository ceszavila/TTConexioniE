\begin{BusinessRule}{RN-S14}{Formato para presentar la cobertura definida}
	{Derivación}
	{Estructura}
	\BRitem{Versión}{0.1}
	\BRitem{Autor}{Pedro Hernández}
	\BRitem{Estatus}{Aprobada 18 de septiembre de 2013}
	\BRitem{Descripción}{El formato para presentar la cobertura definida en la pantalla es:
	
	\begin{itemize}
	  \item Cuando se seleccionó todo el Estado de México: ``Cobertura estatal''.
	 \item Cuando se seleccionó una región completa: ``Toda la Región'', ``Número de la región en números romanos'', ``:'', ``Nombre de la región''. 
	 \item Cuando se seleccionó parte de la región: ``Parte de la Región'', ``Número de la región en números romanos'', ``:'', ``Nombre de la región''.
	 \item Cuando se seleccionó un municipio completo: ``Municipio'' ``Nombre de la región''.
	 \item Cuando se seleccionó parte de un municipio: ``Parte del municipio'', ``Nombre del municipio''.
	 \item Si se seleccionó una localidad en específico: ``Localidad'', ``Nombre de la localidad''.
	\end{itemize}
	
	Se presentará con viñetas a manera de un árbol, donde el primer nivel será la Región, el segundo nivel serán los municpios y el tercer nivel las localidades, en caso de que se hayan seleccionado.
	}
	\BRitem{Ejemplo}{}
	  \begin{itemize}
	     \item Toda la región II: Toluca
	  \end{itemize}
	   \begin{itemize}
	     \item Parte de la región IV
	     : Atlacomulco
		 \begin{itemize}
		      \item Municipio Temazcaltzingo 
		      \item Municipio Atlacomulco 
		      \item Parte del municipio Tlalnepantla
			  \begin{itemize}
			   \item Localidad A
			   \item Localidad B
			  \end{itemize}

		  \end{itemize}
	    \end{itemize}
	\BRitem{Referenciado por}{\cdtIdRef{CUT 7}{Definir cobertura}, \cdtIdRef{CUS 2}{Revisar tarea}, \cdtIdRef{CUS 4.5}{Consultar cobertura}}
\end{BusinessRule}

