 \begin{BusinessRule}{RN-N97}{Periodos disponibles para registrar una Estructura Programática}
	{Derivación}
	{Controla la operación}
	\BRitem{Versión}{1.0}
	\BRitem{Autor}{Angelina Reyes Medina}
	\BRitem{Estatus}{Propuesta el 22 de enero de 2014}
	\BRitem{Descripción}{Los periodos disponibles para registrar una Estructura Programática estarán dados por las siguientes sentencias:
	\begin{enumerate}
		\item Se mostrarán los años correspondientes a las Estructuras Programáticas registradas y que tengan un estado de ``Edición''.
		\item Se mostrará el año actual sólo si, no hay una Estructura Programática registrada con ese año; o si existe, ésta debe cumplir con la primera condición.
		\item Se mostrarán seis años más a partir del último año encontrado por medio de las condiciones anteriores.
	\end{enumerate}
	}
	\BRitem{Referenciado por}{ \cdtIdRef{CUA 5}{Actualizar Estructura Programática}}
\end{BusinessRule}

\begin{BusinessRule}{RN-N98}{Estatus de registro de una Estructura Programática}
	{Derivación}
	{Controla la operación}
	\BRitem{Versión}{1.0}
	\BRitem{Autor}{Angelina Reyes Medina}
	\BRitem{Estatus}{Propuesta el 22 de enero de 2014}
	\BRitem{Descripción}{\hspace{10pt}
	\begin{itemize}
		\item La Estructura Programática se registra con estado de ``Edición'', siempre y cuando el año seleccionado sea posterior al año actual del sistema.
		\item La Estructura Programática se registra con estado de ``Activa'', siempre y cuando el año seleccionado corresponda al año actual del sistema.
	\end{itemize}
	}

	\BRitem{Referenciado por}{ \cdtIdRef{CUA 5}{Actualizar Estructura Programática}}
\end{BusinessRule}

