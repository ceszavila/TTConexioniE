\begin{BusinessRule}{RN-N1}{Periodo válido para una tarea}
	{Derivación}
	{Controla la operación}
	\BRitem{Versión}{0.1}
	\BRitem{Autor}{Ulises Vélez Saldaña}
	\BRitem{Estatus}{Aprobada}% P2
	\BRitem{Relativa a}{Una fecha específica}
	\BRitem{Descripción}{El periodo de una tarea puede tener una duración de un día natural y dicho periodo debe estar contenido en la vigencia de todos los \cdtRef{gls:instrumentoDePlaneacion}{instrumentos de planeación} con los que haya sido alineado. Se debe tomar como referencia la ``fecha de registro'' de la tarea para obtener los instrumentos de planeación en los cuales es vigente}
	\BRitem{Ejemplo}{Para los instrumentos:
		\begin{Citemize}
			\item Plan de Desarrollo (1-enero-2011, 31-diciembre-2017).
			\item Estructura Programática 2013 (1-enero-2013, 31-diciembre-2013).
			\item Estructura Programática 2014 (1-enero-2014, 31-diciembre-2014).
		\end{Citemize}	
		{\bf Ejemplo correcto:} Tarea (20-enero-2013, 28-nov-2013) alineado con Plan de Desarrollo y Estructura Programática del 2013.\\
		{\bf \underline{Incorrecto}:} Tarea (20-enero-2013, 28-nov-2014) alineado con Plan de Desarrollo y Estructura Programática del 2014, ya que el periodo de la tarea no está contenido en el periodo de la Estructura Programática 2014}
	\BRitem{Referenciado por}{\cdtIdRef{CUT 1}{Registrar tarea}, \cdtIdRef{CUT 3.1}{Modificar tarea}}
\end{BusinessRule}

