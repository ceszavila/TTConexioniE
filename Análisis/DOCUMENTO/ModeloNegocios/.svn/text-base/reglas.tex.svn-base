\begin{BusinessRule}{RN-N32}{Calcular el monto total programado de una tarea}
	{Derivación}
	{Controla la operación}
	\BRitem{Versión}{1.0}
	\BRitem{Autor}{Ulises Vélez Saldaña}
	\BRitem{Estatus}{Aprobada 6 de septiembre de 2013}
	\BRitem{Descripción}{El ``monto total programado (solicitado)'' de una tarea es la suma de los montos, cuando su movimiento es ``Solicitado'', de todos los financiamientos registrados para dicha tarea. Si no existen financiamientos registrados el ``monto total programado (solicitado)'' será igual a ``0''}
	\BRitem{Referenciado por}{\cdtIdRef{CUT 6}{Gestionar financiamiento de una tarea}, \cdtIdRef{CUT 8.2}{Registrar avance del financiamiento}, \cdtIdRef{CUS 4.3}{Consultar financiamientos}}
\end{BusinessRule}

